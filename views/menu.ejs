<!-- views/menu.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Menu</title>
    <link rel="stylesheet" href="../styles/menu.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">   
</head>
<body>
    <header>
        <h1>Menu</h1>
        <p>Pick a treat!</p>
    </header>

    <section class="menu-section">
        <div class="menu-grid">
            <% menuItems.forEach(item => { %>
            <div class="menu-item">
                <div class="menu-item-card">
                    <img src="<%= item.image %>" alt="<%= item.name %>" class="menu-img">
                    <div class="menu-item-details">
                        <p class="menu-item-name"><%= item.name %></p>
                        <p class="menu-item-price">Tsh <%= item.price %></p>
                    </div>
                    <button class="menu-item-button">
                        <a href="../pages/customer_signin.html"><img src="../images/icons8-cart-24.png" alt="Cart" alt="Cart Icon" class="cart-icon"></a>
                    </button>
                </div>
            </div>
            <% }); %>
        </div>
    </section>

    <footer>
        <div class="footer-content">
            <div class="footer-logo">
                <img src="../images/Bukhari logo.jpg" alt="Bukhari Restaurant Logo">
                <p>Bukhari Restaurant</p>
            </div>
            <div class="footer-contact">
                <p style="font-size:larger;">Contact Us</p>
                <p>Email: info@bukhari.com</p>
                <p>Phone: +255 123 456 789</p>
                <p>Address: 123 Bukhari St, Dar es Salaam, Tanzania</p>
            </div>
            <div class="footer-social">
                <p>Follow Us</p>
                <a href="https://facebook.com" class="fa fa-facebook"></a>  
                <a href="https://twitter.com" class="fa fa-twitter"></a>  
                <a href="https://pinterest.com" class="fa fa-pinterest"></a>  
                <a href="https://linkedin.com" class="fa fa-linkedin"></a>  
                <a href="https://instagram.com" class="fa fa-instagram"></a>  
                <a href="https://youtube.com" class="fa fa-youtube"></a>
                <a href="https://snapchat.com" class="fa fa-snapchat-ghost"></a>  
                <a href="https://skype.com" class="fa fa-skype"></a>
            </div>
        </div>
        <div class="footer-bottom">
            <p>&copy; 2024 Bukhari Restaurant. All rights reserved.</p>
        </div>
    </footer>
</body>
</html>
